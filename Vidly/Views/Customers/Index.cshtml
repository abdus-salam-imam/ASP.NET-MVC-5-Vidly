@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We dont have any customer yet </p>
}

else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>

            </tr>

        </thead>
        <tbody>

            @foreach (var cusomter in Model)

            {
                <tr>

                    <td>@Html.ActionLink(cusomter.Name, "Details", "Customers", new { id = cusomter.Id }, null)</td>
                </tr>



            }


        </tbody>



    </table>




}






